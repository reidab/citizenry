- content_for(:section_header) do
  .section_header{:class => 'projects'}
    %h1= semantic_pluralize(@projects.respond_to?(:total_entries) ? @projects.total_entries : @projects.size, "#{@tag} project<span class='desktop-only'> or product</span>".strip.titleize.html_safe, "#{@tag} projects<span class='desktop-only'> & products</span>".strip.titleize.html_safe)
    = link_to "+ Add a Project", new_project_path, :class => 'new'
    #view_options
      %span.sorting
        %strong Sort by:
        = sort_link(:name) + ","
        = sort_link(:created_at, :label => "Date added", :default_order => :desc, :is_default => :desc) + ","
        = sort_link(:random)

= render :partial => 'projects/list', :object => @projects
