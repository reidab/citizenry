= semantic_form_for(@group, :html => {:multipart => true}) do |f|
  = display_errors_for @group
  = f.inputs do
    = f.input :name
    = render 'site/custom_slug_field', :form => f
    = f.input :url
    = f.input :mailing_list
    = f.input :description
    = f.input :meeting_info
    = f.input :tag_list, :as => :text, :input_html => {:class => 'tags'}
    = f.input :technology_list, :as => :text, :input_html => {:class => 'tags'}
    = import_image_from_url_tags_for f, @group, :logo
    = f.buttons
