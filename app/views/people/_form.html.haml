- context ||= :general
= semantic_form_for(@person, :html => {:multipart => true}) do |f|
  = display_errors_for @person
  = f.inputs do
    = f.input :name
    -# = f.input :twitter
    - unless @person.new_record?
      = f.semantic_fields_for :user do |u|
        = u.input :email, :hint => t('people.new.email.hint')
    = f.input :location, :hint => t('field.location.hint')
    = f.input :url
    = f.input :bio
    = f.input :tag_list, :as => :text, :hint => t('field.tag_list.hint'), :input_html => {:class => 'tags'}
    = f.input :technology_list, :as => :text, :hint => t('field.technology_list.hint'), :input_html => {:class => 'tags'}
    = import_image_from_url_tags_for f, @person, :photo
    = f.input :reviewed, :input_html => {:value => true}, :as => :hidden
    - if current_user.admin?
      = f.input :user, :include_blank => '-- '+t('field.user.blankoption')+' --', :label_method => :label_for_admin
    = hidden_field_tag :form_context, context
  = f.buttons
